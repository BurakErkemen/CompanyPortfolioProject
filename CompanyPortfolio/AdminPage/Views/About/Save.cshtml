@model AdminPage.Models.AboutModel

@{
    ViewData["Title"] = "Hakkımda Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">✏️ Hakkımda Bilgisi Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @* AboutId ve UserId gizli alan olarak *@
                <input type="hidden" asp-for="AboutId" />
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="Text" class="form-label">Açıklama</label>
                    <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <button asp-action="Save" asp-controller="About" class="btn btn-primary">Kaydet</button>
                @*<button type="submit" class="btn btn-primary" asp-controller="about" asp-action="save" formmethod="post">💾 Kaydet</button>
                *@<a asp-action="Index" class="btn btn-secondary ms-2">🔙 Geri Dön</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
