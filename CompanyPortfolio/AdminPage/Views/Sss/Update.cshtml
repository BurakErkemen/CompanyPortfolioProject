@model AdminPage.Models.SssModel

@{
    ViewData["Title"] = "S.S.S. Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">✏️ Soru Güncelle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="SssId" />
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="Question" class="form-label">Soru</label>
                    <input asp-for="Question" class="form-control" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Answer" class="form-label">Cevap</label>
                    <textarea asp-for="Answer" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">🔙 Geri</a>
                    <button type="submit" class="btn btn-primary">💾 Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
