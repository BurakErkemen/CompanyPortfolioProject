@model AdminPage.Models.TeamModel

@{
    ViewData["Title"] = "Ekip Üyesi Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">✏️ Ekip Üyesi Güncelle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @* Gizli alanlar *@
                <input type="hidden" asp-for="TeamId" />
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Görevi</label>
                    <input asp-for="Role" class="form-control" />
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Fotoğraf URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LinkedInUrl" class="form-label">LinkedIn</label>
                    <input asp-for="LinkedInUrl" class="form-control" />
                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TwitterUrl" class="form-label">Twitter</label>
                    <input asp-for="TwitterUrl" class="form-control" />
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">🔙 Geri Dön</a>
                    <button type="submit" class="btn btn-warning">💾 Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
